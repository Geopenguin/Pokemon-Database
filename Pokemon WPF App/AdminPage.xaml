<Page x:Class="Pokemon_WPF_App.AdminPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:Pokemon_WPF_App"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AdminPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <TextBlock Text="Admin Panel" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="10" />

        <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Content="Manage Users" Margin="5" Padding="10" FontSize="16"  />
            <Button Content="Manage Cards" Margin="5" Padding="10" FontSize="16" />
            <Button Content="View Reports" Margin="5" Padding="10" FontSize="16"  />
            <Button Content="Settings" Margin="5" Padding="10" FontSize="16"/>
        </StackPanel>
    </Grid>
</Page>