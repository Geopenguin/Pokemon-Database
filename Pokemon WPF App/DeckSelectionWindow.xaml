<Window x:Class="Pokemon_WPF_App.DeckSelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Select Deck" Height="300" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <ListBox x:Name="DeckListBox" Grid.Row="0" Margin="10" />

        <Button x:Name="OkButton" Content="OK" Grid.Row="1" Margin="10" Click="OkButton_Click" />
    </Grid>
</Window>