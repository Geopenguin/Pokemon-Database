<Window x:Class="Pokemon_WPF_App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pokemon_WPF_App"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Name="Main">
    <Grid>
        <TabControl x:Name="MainTabControl" SelectionChanged="MainTabControl_SelectionChanged">
            <TabItem Header="User Library">
                <Frame x:Name="LibraryFrame" />
            </TabItem>
            <TabItem Header="Market">
                <Frame x:Name="MarketFrame" />
            </TabItem>
            <TabItem Header="Gamble">
                <Frame x:Name="GambleFrame" />
            </TabItem>
        </TabControl>
    </Grid>
</Window>
